<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Gradient background for a more modern feel -->
    <gradient
        android:startColor="#FFFFFF"
        android:endColor="#F0F0F0"
        android:angle="45" /> <!-- Soft gradient from white to light gray -->

    <!-- Rounded corners -->
    <corners android:radius="16dp"/>

    <!-- Border with a more subtle shadow effect -->
    <stroke
        android:color="#DCDCDC"
    android:width="2dp"/>

    <!-- Inner shadow for a more modern card-like effect -->
    <solid android:color="#E6E6E6" /> <!-- Lighter background color for subtle inner shadow -->

    <!-- Optional: Add shadow -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp"/>
</shape>
